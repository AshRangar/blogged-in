<%if (flash && flash.error && flash.error.length > 0){%>
    <div class="col-md-6 col-md-offset-3">
        <p class="alert alert-danger">
            <%=flash.error %>
        </p>
    </div>
    <%}%>

        <%if (flash && flash.notice && flash.notice.length > 0){%>
            <div class="col-md-6 col-md-offset-3">
                <p class="alert alert-success">
                    <%=flash.notice %>
                </p>
            </div>
            <%}%>