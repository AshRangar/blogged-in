<!DOCTYPE html>
<html lang="en">

<head>

    <% include ../partials/head.ejs %>
        <% include ../partials/css.ejs %>

</head>

<body>

    <% include ../partials/navbar.ejs %>
        <% include ../partials/header.ejs %>
            <% include ../partials/flash.ejs %>

                <!-- Post Content -->
                <article>
                    <div class="container">
                        <div class="post-preview">

                            <%if(isUserAuthor){%>

                                <a href="/my/post/edit/<%=post._id%>" class="btn btn-info btn-md">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>

                                <a href="/my/post/delete/<%=post._id%>" class="btn btn-danger btn-md">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>

                                <%}%>

                                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                                        <p>
                                            <%=post.content%>
                                        </p>

                                        <p class="post-meta">Posted by
                                            <a href="/users/<%=post.authorId%>">
                                                <%=post.authorUsername%>
                                            </a> on
                                            <%var date = post._id.getTimestamp().toDateString()%>
                                                <%=date.substr(date.indexOf(' ')+1);%>
                                        </p>

                                    </div>
                        </div>

                        <div class="post-preview">
                            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                                <div class="form-group">
                                    <form>
                                        <div class="row">
                                            <div class="form-group col-xs-12">
                                                <label for="comment">Comment:</label>
                                                <textarea class="form-control" rows="5" id="comment"></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-xs-12">
                                                <button type="submit" class="btn btn-default">Post</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </article>

                <hr>
                <% include ../partials/footer.ejs %>
                    <% include ../partials/js.ejs %>

</body>

</html>